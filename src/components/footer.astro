---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
 
  {
    url: "mailto: hello@dhwaper.com",
    description: "Mail",
    icon: "fa-regular:envelope",
  },
  {
    url: "https://www.instagram.com/dhwaper/",
    description: "Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://apps.apple.com/us/developer/akhil-jayaram/id1189515801",
    description: "App Store",
    icon: "fa-brands:app-store",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 blur-lg overflow-hidden opacity-50">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
